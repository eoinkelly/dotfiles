# #####################################
# A fast way of chdir to a code project
function work {
  cd ~/Code/repos/$1
}

function _work() {
  local state

  _arguments '1: :->repos_dir'

  case $state in
    (repos_dir) _arguments '1:profiles:($(ls ~/Code/repos))' ;;
  esac
}

compdef _work work

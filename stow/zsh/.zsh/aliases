alias tree='tree -C'
alias typealot="history | ~/.dotfiles/bin/typealot-filter.rb | sort -rn | head -n 20"
alias typeabit="history | tail -n 1000 | ~/.dotfiles/bin/typealot-filter.rb | sort -rn | head -n 20"


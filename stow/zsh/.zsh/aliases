# #######################################
function notes {
  cd ~/notes/$1
}

function _notes() {
  local state

  _arguments '1: :->notes_dir'

  case $state in
    (notes_dir) _arguments '1:profiles:($(ls ~/notes))' ;;
  esac
}

compdef _notes notes

[user]
	email = eoin@rabidtech.co.nz
	name = Eoin Kelly

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "status"]
	added = green
	changed = red bold
	untracked = magenta bold

[color "branch"]
	remote = yellow

[core]
	editor = vim
  autocrlf = input

[alias]
	st = status
	co = checkout
	ci = commit
	lp = log --graph --decorate --pretty=oneline --abbrev-commit --all
	amend = commit --amend
	staged = diff --cached
	unstaged = diff
	both = diff HEAD
	l1 = log --pretty=oneline
  roblog = log --pretty=format:'%Cred %h %Creset %ad %Cgreen %an %Creset %s' --date=rfc

[push]
	default = matching
[init]
	templatedir = ~/.git_template
